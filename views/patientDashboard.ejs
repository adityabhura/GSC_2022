    <div class="container" style="margin-top:50px;">
        <div class="row mx-5 my-5 py-5 px-5">
            <% hospitals.forEach(function(hospital){%>
                <div class="hospital" style="margin-bottom: 20px;">
                    <div class="card-body">
                        <p class="card-text" style="font-size:16.5px; align-items: center; justify-items:center; justify-content: center;"><%=hospital.name%></p>  
                        <p class="card-text" style="font-size:16.5px; align-items:center; justify-items:center; justify-content:center"><%=hospital.address%></p>
                    </div>
            
                </div>
            <%})%>
        </div>
    </div>

    
